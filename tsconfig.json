{
  "compilerOptions": {
    "target": "ES5",
    "module": "commonjs",
    "lib": ["ES6", "ES2015", "DOM"],
    "allowJs": true,
    "declaration": true,
    "outDir": "bin",
    "rootDir": "src",
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "types": ["node", "@types/jest"],
    "typeRoots": ["./node_modules/@types"]
  },
  "include": ["src/**/*"],
  "exclude": ["src/**/*.test.js", "src/**/*.test.ts"]
}
